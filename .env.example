# Docker Environment Configuration
# Copy this file to .env and fill in your values

# Strava API Configuration (Required)
STRAVA_CLIENT_ID=your_strava_client_id
STRAVA_CLIENT_SECRET=your_strava_client_secret
STRAVA_REDIRECT_URI=http://localhost:3000/strava/auth/callback

# AI Providers API Keys (Optional, but required for image generation features)
POLLINATIONS_API_KEY=your_pollinations_api_key

# Server Configuration
PORT=3000
NODE_ENV=production
UI_ORIGIN=http://localhost:3001

# Optional: Database Configuration (if needed)
# DATABASE_URL=postgresql://user:password@localhost:5432/torq

# Optional: API Keys for Image Generation
# OPENAI_API_KEY=your_openai_api_key
# REPLICATE_API_TOKEN=your_replicate_token

# Optional: Logging
# LOG_LEVEL=info

# Optional: Custom hostnames for Docker
# SERVER_HOSTNAME=0.0.0.0
